# ========================================
# OMEN Configuration
# ========================================

# Server Configuration
OMEN_BIND=0.0.0.0
OMEN_PORT=8080

# Storage
OMEN_DB_URL=sqlite:///data/omen.db
# OMEN_DB_URL=postgres://user:pass@localhost/omen
OMEN_REDIS_URL=redis://localhost:6379

# Routing Configuration
OMEN_ROUTER_PREFER_LOCAL_FOR=code,regex,tests
OMEN_BUDGET_MONTHLY_USD=150
OMEN_SOFT_LIMIT_ANTHROPIC=70
OMEN_SOFT_LIMIT_OPENAI=70

# ========================================
# Provider API Keys
# ========================================

# OpenAI
OMEN_OPENAI_API_KEY=sk-...

# Anthropic (Claude)
OMEN_ANTHROPIC_API_KEY=sk-ant-...

# xAI (Grok)
OMEN_XAI_API_KEY=xai-...

# Google Gemini
OMEN_GOOGLE_API_KEY=...

# Azure OpenAI
OMEN_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
OMEN_AZURE_OPENAI_API_KEY=...

# Ollama (local)
OMEN_OLLAMA_ENDPOINTS=http://localhost:11434,http://ollama-3070:11434

# AWS Bedrock (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
# AWS_SESSION_TOKEN=...

# Google Vertex AI (optional)
OMEN_VERTEXAI_PROJECT_ID=your-project-id
OMEN_VERTEXAI_LOCATION=us-central1
OMEN_VERTEXAI_ACCESS_TOKEN=...

# ========================================
# Optional: SSO Configuration
# ========================================

# OMEN_OIDC_GOOGLE_CLIENT_ID=...
# OMEN_OIDC_GOOGLE_CLIENT_SECRET=...
# OMEN_OIDC_ALLOWED_ORIGINS=https://ghost.cktechx.com

# ========================================
# Optional: Authentication
# ========================================

# OMEN_AUTH_REQUIRE_API_KEY=false
# OMEN_AUTH_MASTER_KEY=...

